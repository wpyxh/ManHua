/* pages/home/home.wxss */
.recommend-scroll{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.banner{
  position: relative;
  width: 100%;
  height: 580rpx;
  margin-bottom: 20rpx;
}
.banner .banner-item,.banner-img{
  width: 100%;
  height: 100%;
}
.navbar{
  position: relative;
  height: 180rpx;
  width: 100%;
  display: flex;
}
.navbar .bar-list{
  width: 20%;
  height: 180rpx;
  flex: 1;
  text-align: center;
}
.navbar .bar-list image{
  width: 100rpx;
  height: 82rpx;
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.navbar .bar-list text{
  display: block;
  color: #333;
  font-weight: 700;
  font-size: 28rpx;
}
.adver{
  width: 95%;
  height: 180rpx;
  position: relative;
  margin-left: 2.4%;
}
.adver image{
  width: 100%;
  height: 100%;
}
.recommend-search{
  position: absolute;
  top: 40rpx;
  right: 0;
  width: 90rpx;
  height: 80rpx;
  background: #d44439;
  z-index: 9999;
  text-align: center;
  border-radius: 50% 0 0 50%;
}
.recommend-search .icon-search{
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}