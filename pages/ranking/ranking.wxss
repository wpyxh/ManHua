.ranking-tab{
  position: relative;
  width: 100%;
  display: flex;
  height: 80rpx;
  text-align: center;
}
.ranking-tab .tab-item{
  flex: 1;
  display: inline-block;
  color: rgb(102,102,102);
  line-height: 80rpx;
  font-size: 28rpx;
}
.ranking-tab .tab-item-active{
  color: rgb(232, 155, 0);
  font-weight: 600;
}

.ranking-scroll{
  position: absolute;
  top: 80rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

.ranking-item{
  position: relative;
  width: 100%;
  height: 250rpx;
  margin: 20rpx 0;
  overflow: hidden;
}
.ranking-item .ranking-item-img{
  position: relative;
  width: 180rpx;
  height: 100%;
  margin-right: 20rpx;
}
.ranking-item  .ranking-item-title{
  position: absolute;
  display: inline-block;
  top: 0;
  width: 336rpx;
  height: 100%;
}
.ranking-item  .ranking-item-title text{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
}
.ranking-item  .ranking-item-title .cartoon-name{
  font-size: 32rpx;
  font-weight: 700;
  padding-top: 16rpx;
  color: rgb(51, 51, 51);
}
.ranking-item  .ranking-item-title .cartoon-latest{
  padding-bottom: 30rpx;
  font-size: 26rpx;
  color: rgb(170, 170, 170);
}
.ranking-item  .ranking-item-title .cartoon-time{
  font-size: 26rpx;
  color: rgb(170, 170, 170);
  padding-bottom: 16rpx;
}
.ranking-item  .ranking-item-title .cartoon-btn{
  padding: 0 14rpx 0 14rpx;
  color: #fff;
  border-radius: 20rpx;
  font-size: 20rpx;
  height: 32rpx;
  width: 80rpx;
  line-height: 32rpx;
  display: inline-block;
  background: rgb(166, 192, 255);
}
.ranking-item .cartoon-top{
  position: absolute;
  top: 0;
  right: 0;
  width: 194rpx;
  height: 100%;
  display: inline-block;
  text-align: center;
}
.ranking-item .cartoon-top image{
  width: 60rpx;
  height: 80rpx;
  margin-top: 50%;
  transform: translateY(-50%);
}
.ranking-item .cartoon-top .top{
  font-size: 60rpx;
  color: rgb(170, 170, 170);
  line-height: 194rpx;
}