.more-scroll{
  position: fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
}
.more-item{
  float: left;
  position: relative;
  width: 32.7%;
  height: 384rpx;
  margin-right: 0.316%;
  margin-left: 0.316%;
  text-align: center;
  margin-top: 10rpx;
}
.more-item image{
  width: 100%;
  height: 316rpx;
  position: relative;
}
.more-item text{
  position: relative;
  width: 100%;
  display: inline-block;
  color: #333;
  font-size: 28rpx;
  font-weight: 700;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}