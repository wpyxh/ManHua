.read-scroll{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 0%;
}

.read-scroll image{
  position: relative;
  width: 100%;
  padding: 0;
  margin:0;
  border: 0;
  margin-top: -2rpx;
}

 .btn{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
}
 .btn text{
  line-height: 80rpx;
}
 .btn .last,.next{
  position: relative;
  height: 100%;
  width: 50%;
  text-align: center;
  display: inline-block;
}
.btn .last{
  background: #fff;
}
.btn .next{
  background: #d44439;
}