.background-img{
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
}
.background-img .img{
  margin-top: 50%;
  transform: translateY(-50%);
  width: 300rpx;
  height: 300rpx;
}

.search-item{
  position: relative;
  width: 100%;
  height: 248rpx;
  margin: 20rpx 0;
}
.search-item .search-item-img{
  position: relative;
  width: 180rpx;
  height: 100%;
  margin-right: 20rpx;
}
.duoyu{
  width: 0;
  height: 0;
  display: none;
}
.search-item .cartoon-info{
  position: relative;
  width: 550rpx;
  height: 100%;
  display: inline-block;
}
.search-item .cartoon-info .cartoon-conent{
  position: absolute;
  left: 0;
  height: 100%;
  width: 340rpx;
  display: inline-block;
}
.search-item .cartoon-info .start{
  position: absolute;
  right: 0;
  height: 100%;
  width: 210rpx;
  display: inline-block;
}
.search-item .cartoon-info .cartoon-conent .name,.latest,.tag{
  position: relative;
  display: inline-block;
  height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search-item .cartoon-info .cartoon-conent .name{
  width: 100%;
  margin-top:20rpx;
  margin-bottom: 20rpx;
  color: rgb(51, 51, 51);
  font-weight: 600;
  font-size: 32rpx;
}
.search-item .cartoon-info .cartoon-conent .latest{
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: rgb(170, 170, 170);
}
.search-item .cartoon-info .cartoon-conent .tag{
  padding: 0 7px 0 6px;
  color: #fff;
  line-height: 44rpx;
  background-color: rgb(166, 192, 255);
  border-radius: 20rpx;
  font-size: 24rpx;
}
.search-item .cartoon-info .start{
  text-align: center;
}
.search-item .cartoon-info .start .btn{
  display: inline-block;
  font-size: 24rpx;
  color: #333;
  background-color: #FFD611;
  border-radius: 100px;
  border: 2rpx solid #FFD611;
  height: 60rpx;
  line-height: 60rpx;
  width: 140rpx;
  margin-top:50%;
  transform: translateY(-50%);
}
